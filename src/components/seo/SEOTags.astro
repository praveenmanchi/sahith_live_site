---
import { SEO } from "astro-seo";
import { SITE_URL } from "@/data/config";
import type { HeadTags } from "@/utils/types/HeadTags";

type Props = HeadTags;

const { title, description, noindex, og } = Astro.props;

const DEFAULT_TITLE_PAGE = "Sahith Manchi - Java Full Stack Developer";
const DEFAULT_DESCRIPTION_PAGE = 
  "Namaste üôèüèª, I'm a Java Full Stack developer with over 8+ years of experience in Spring MVC, Restful Web services, PostgreSQL & Oracle DB for Database Management, Unit Testing, Crucible. Currently working with Dell.Inc as a Java Developer. Outside of work, I enjoy mixing Pulihora with Desi aunties.";

const DEFAULT_URL_SITE = SITE_URL;

const GITHUB_IMAGE_URL = "https://instagram.fhyd1-4.fna.fbcdn.net/v/t51.2885-19/387268593_844188997172883_7539530073825539889_n.jpg?stp=dst-jpg_s320x320&_nc_ht=instagram.fhyd1-4.fna.fbcdn.net&_nc_cat=103&_nc_ohc=tDgnv6Pzu5kAX93PHLT&edm=AOQ1c0wBAAAA&ccb=7-5&oh=00_AfCFKonCk9YlUPASdypHf9ZZwJnKPVpqMRfw0UdC3EU3Xg&oe=65781AB0&_nc_sid=8b3546";

const openGraph = {
  title: title || og?.title || DEFAULT_TITLE_PAGE,
  type: og?.type || "website",
  image: og?.image || GITHUB_IMAGE_URL,
  alt: og?.alt || "Sahith Manchi - Professional Profile",
  url: DEFAULT_URL_SITE,
  description: og?.description || DEFAULT_DESCRIPTION_PAGE,
};
---

<head>
  <SEO
    charset="UTF-8"
    title={title || DEFAULT_TITLE_PAGE}
    description={description || DEFAULT_DESCRIPTION_PAGE}
    noindex={noindex || false}
    openGraph={{
      basic: {
        title: openGraph.title,
        type: openGraph.type,
        image: openGraph.image,
        url: openGraph.url,
        description: openGraph.description,
      },
      image: {
        alt: openGraph.alt,
      },
    }}
    twitter={{
      card: "summary_large_image",
      image: openGraph.image,
      title: openGraph.title,
      description: openGraph.description,
      site: "@sahithmanchi",
      creator: "@sahithmanchi",
    }}
    extend={{
      link: [
        { rel: "icon", href: "/favicon.svg" },
        { rel: "stylesheet", href: "https://fonts.googleapis.com/css?family=Lora|Open+Sans" },
        { rel: "sitemap", href: "/sitemap-index.xml" },
      ],
      meta: [
        { name: "viewport", content: "width=device-width, initial-scale=1" },
        { name: "generator", content: "Astro" },
        { name: "twitter:url", content: "https://twitter.com/sahithmanchi" },
        { name: "linkedin:url", content: "https://www.linkedin.com/in/sahith-m-a1ab18165/" },
        { name: "github:url", content: "https://github.com/Sahith1408" },
      ],
    }}
  />
</head>
